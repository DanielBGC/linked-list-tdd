{
  "compilerOptions": {
    "target": "es6",                          
    "module": "CommonJS",                    
    "lib": ["es6"],                     
    "allowJs": false,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./build/**/*"
  ]
}